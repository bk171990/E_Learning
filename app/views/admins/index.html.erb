
<p id="notice"><%= notice %></p>
  <h1>Admins</h1>
<div class="container-fluid">
  <hr>  
    
    <div class="widget-content nopadding">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <tr class="odd gradeX">
             <th>Name</th>
             <th>Email</th>
             <th>Phonenumber</th>
             <th>Password</th>
             <th>Confirm password</th>
             <th colspan="3"></th>
            </tr>
            </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.name %></td>
              <td><%= admin.email %></td>
              <td><%= admin.phonenumber %></td>
              <td><%= admin.password %></td>
              <td><%= admin.confirm_password %></td>
              <td><%= link_to 'Show', admin %></td>
              <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
              <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
        </table>
        </div>

      <br>
      <%= link_to 'New Admin', new_admin_path, class: "btn btn-success" %>
</div>
</div>
