<p id="notice"><%= notice %></p>
<h1>Course</h1>
<div class="container-fluid">
  <hr>

<div class="widget-content nopadding">
            <table class="table table-bordered table-striped">
              <thead>
                <tr>

      <th>Course name</th>
      <th>Course description</th>
      <th>Course validity</th>
      <th>Status</th>
      <th>Batch</th>
      <th>Admission start date</th>
      <th>Admission end date</th>
       <th>Fees</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
    <%if course.course_validity == Date.today%>
    <% course.status = 'false' %>
    <%course.update!(status: 'false')%>
    <%end%>
      <tr>
        <td><%= course.course_name %></td>
        <td><%= course.course_description %></td>
        <td><%= course.course_validity %></td>
        <td><%= course.status %></td>
        <td><%= course.batch %></td>
        <td><%= course.admission_start_date %></td>
        <td><%= course.admission_end_date %></td>
         <td><%= course.fees %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
<!--         <td><%#= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
 -->      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Course', new_course_path, class: "btn btn-success" %>
</tr>
</tbody>
</table>
</div>
  
