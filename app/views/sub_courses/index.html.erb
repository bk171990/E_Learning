<p id="notice"><%= notice %></p>
<h1>Sub Courses</h1>
<div class="container-fluid">
  <hr>

<div class="widget-content nopadding">
            <table class="table table-bordered table-striped">
              <thead>
                <tr>


<table>
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Sub Course Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_courses.each do |sub_course| %>
      <tr>
        <td><%= sub_course.name %></td>
        <td><%= sub_course.course.name %></td>
        <td><%= link_to 'Show', sub_course, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_sub_course_path(sub_course), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', sub_course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sub Course', new_sub_course_path, class: "btn btn-success"%>
