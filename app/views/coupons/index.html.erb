<p id="notice"><%= notice %></p>
  <h1>Coupons</h1>
    <div class="container-fluid">
        <div class="widget-content nopadding">
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                  <th>Coupon name</th>
                   <th>Discount</th>
                  <th>Coupon description</th>
                  <th>Coupon discount code</th>
                  <th>Valid from</th>
                  <th>Valid until</th>
                  <th>Status</th>
                  <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
               <% @coupons.each do |coupon| %>
                  <tr>
                     <td><%= coupon.coupon_name %></td>
                     <td><%= coupon.discount %></td>
                     <td><%= coupon.coupon_description %></td>
                     <td><%= coupon.coupon_discount_code %></td>
                     <td><%= coupon.valid_from %></td>
                     <td><%= coupon.valid_until %></td>
                     <td><%= coupon.status %></td>
                     <td><%= link_to 'Show', coupon %></td>
                     <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
                     <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  <% end %>
            </tbody>
          </table>
        </div>
        </div>      
      <br>

<%= link_to 'New Coupon', new_coupon_path, class: "btn btn-success" %>
    
  <div class="widget nopadding">
  <ul class="pager">
  <li><a href="#">1</a></li>
