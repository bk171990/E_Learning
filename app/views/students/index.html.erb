<p id="notice"><%= notice %></p>
<h1>Student</h1>
<div class="container-fluid">
  <hr>  
    
    <div class="widget-content nopadding">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
          <th>Sr. NO.
      <th>Name</th>
      <th>Referral code</th>
      <th>Referenced By</th>
       <th>Phone number</th>
        <th>Email</th>

        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%if current_user.role == 'Student'%>
 <td><%= current_user.student.name %></td>
        <td><%= current_user.student.referral_code %></td>
        <td><%= current_user.student.referenced_by%></td>
        <td><%= current_user.student.course.course_name %></td>
        <td><%= current_user.student.phone_number %></td>
        <td><%= current_user.student.email %></td>
<%else%>
    <% @students.each_with_index do |student, i| %>
      <tr>
      <td><%= i+1%>
        <td><%= student.name %></td>    
        <td><%= student.referral_code %></td>
        <td><%= student.referenced_by%></td>
        <td><%= student.phone_number %></td>
        <td><%= student.email %></td>
       <td><%= link_to 'Show', student  , class: "btn btn-warning"%></td>
        <td><%= link_to 'Edit', edit_student_path(student) , class: "btn btn-primary"%></td>
        <%#= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </tr>
    <% end %>
     <%end%>
  </tbody>
</table>

<br>

<%if current_user.role != 'Student'%>
<%= link_to 'New Student', new_student_path, class: "btn btn-success" %>
<%end%>