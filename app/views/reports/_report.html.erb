<h1>Student</h1>
<div class="container-fluid">
  <hr>  
    <div class="widget-content nopadding">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
      <th>Name</th>
       <th>Contact</th>
       <th>Status</th>
       <th>Payment Type</th>
       <th>installment</th>
			 <th>remaining</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

  	<%@payments.each do |p| %>
  	<tr>
      	<td><% if p.student.present? %>
  	 <%= p.student.name%> </td>
  	 <td><%= p.student.phone_number%></td>
  	 <td><%= p.payment_status%></td>
  	 <td><%= p.payment_type%></td>
  	 <td><%= p.instalment%></td>
  	 <td><%= p.remaining%></td>

      <%end%>
    <%end%>
  	</tr>
  </tbody>
</table>